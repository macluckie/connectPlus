{% trans_default_domain 'FOSUserBundle' %}


<form action="{{ path("fos_user_security_check") }}" method="post" class="login">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"></label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
        <div class="login-form">
            <div class="sign-in-htm">
                <div class="group">

                    <label for="Login" class="label">{{ 'Login'|trans }}</label>
                    <input id="user" type="text"  name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="input">
                </div>
                <div class="group">
                    <label for="Password" class="label">{{ 'Password'|trans }}</label>
                    <input id="pass password" type="password"  name="_password" required="required" autocomplete="current-password" class="input" data-type="password">
                </div>
                <div class="group">
                    <input id="check" type="checkbox" class="check" checked>
                    <label for="check"><span class="icon"></span> Keep me Signed in</label>
                </div>
                <div class="group">
                    <input type="submit" class="button" value="Sign In">
                </div>
                <div class="hr"></div>
                <div class="foot-lnk">
                    <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>

                </div>
            </div>

        </div>
    </div>
</div>

</form>

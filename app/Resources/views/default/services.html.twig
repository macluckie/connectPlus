<section class="our-services" id="services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Nos Services</h2>
                </div>
            </div>
        </div>
        <div class="row">
            {% for service in services %}
            <div class="col-md-4 service">
                <div class="service-item">
                    <div class="icon">
                        <img src="template/img/service_icon_1.png" alt="">
                    </div>
                    <h4>{{service.title}}</h4>
                    <p class="details_service">{{service.details}}</p>
                    <p class="details_service">{{service.details2}}</p>
                </div>
            </div>

            {% endfor %}
       
        </div>
    </div>
</section>
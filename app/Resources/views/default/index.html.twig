{% extends 'base.html.twig' %}
{% block body %}

<header>

    {% if messages is defined %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}


      <img class="d-block w-100" src="/upload/{{ ramdomPicture2.imageName | default('NBA2K19.png')}}" alt="Second slide" height="600">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/upload/{{ ramdomPicture3.imageName | default('spiderman.jpg')}}" alt="Third slide" height="600">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Console</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ console.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ console.name }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ console.marque }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('console_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('console_edit', { 'id': console.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
